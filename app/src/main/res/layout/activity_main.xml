<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imgbtn1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_down" />

    <ImageButton
        android:id="@+id/imgbtn2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtn1"
        app:srcCompat="@drawable/card_down" />

    <ImageButton
        android:id="@+id/imgbtn3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imgbtn1"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn1"
        app:srcCompat="@drawable/card_down" />

    <ImageButton
        android:id="@+id/imgbtn4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn2"
        app:layout_constraintTop_toTopOf="@+id/imgbtn3"
        app:srcCompat="@drawable/card_down" />

    <ImageButton
        android:id="@+id/imgbtn5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imgbtn3"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn3"
        app:srcCompat="@drawable/card_down" />

    <ImageButton
        android:id="@+id/imgbtn6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn4"
        app:layout_constraintTop_toTopOf="@+id/imgbtn5"
        app:srcCompat="@drawable/card_down" />

    <ImageButton
        android:id="@+id/imgbtn7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imgbtn5"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn5"
        app:srcCompat="@drawable/card_down" />

    <ImageButton
        android:id="@+id/imgbtn8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn6"
        app:layout_constraintTop_toTopOf="@+id/imgbtn7"
        app:srcCompat="@drawable/card_down" />


</androidx.constraintlayout.widget.ConstraintLayout>